<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".connexion">

    <TextView
            android:text="Connexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.088"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/connexion_pt_pwd"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.465"
            app:layout_constraintHorizontal_bias="0.688" android:hint="Mot de passe"/>
    <EditText
            android:layout_width="159dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/connexion_pt_id"
            app:layout_constraintBottom_toTopOf="@+id/connexion_pt_pwd"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.67" android:contentDescription="Login"
            app:layout_constraintHorizontal_bias="0.702" android:hint="Login"/>
    <Button
            android:text="Valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connexion_btn_valider"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/connexion_btn_annuler"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintTop_toTopOf="@+id/connexion_btn_annuler"/>
    <Button
            android:text="Annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connexion_btn_annuler"
            app:layout_constraintTop_toBottomOf="@+id/connexion_pt_pwd" android:layout_marginTop="72dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.241"/>
    <TextView
            android:text="Identifiant :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/connexion_pt_id"
            app:layout_constraintBottom_toBottomOf="@+id/connexion_pt_id"
            app:layout_constraintEnd_toStartOf="@+id/connexion_pt_id" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.523" app:layout_constraintVertical_bias="0.608"/>
    <TextView
            android:text="Mot de passe :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/connexion_pt_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/connexion_pt_pwd"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/connexion_pt_pwd"
            app:layout_constraintHorizontal_bias="0.639" app:layout_constraintVertical_bias="0.476"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail_activite">

    <TextView
            android:text="Détails de l'activité :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_tv_titre" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.219"
            app:layout_constraintVertical_bias="0.076" android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:text="Retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_btn_retour"
            app:layout_constraintTop_toBottomOf="@+id/activite_detail_tv_titre" android:layout_marginTop="252dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.513"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"/>
    <TextView
            android:text="Date de l'activité :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_tv_date"
            app:layout_constraintTop_toBottomOf="@+id/activite_detail_tv_titre"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.084"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.104"/>
    <TextView
            android:text="Lieu de l'activité :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_tv_lieu"
            app:layout_constraintTop_toBottomOf="@+id/activite_detail_tv_date"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.077"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.104"/>
    <TextView
            android:text="Motif de l'activité :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_tv_motif"
            app:layout_constraintTop_toBottomOf="@+id/activite_detail_tv_lieu"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.099"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"/>
    <Button
            android:text="Non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_btn_specialiste"
            app:layout_constraintBottom_toBottomOf="@+id/textView8" app:layout_constraintVertical_bias="0.379"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.571" app:layout_constraintTop_toTopOf="@+id/textView8"/>
    <TextView
            android:text="Spécialiste :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintEnd_toStartOf="@+id/activite_detail_btn_specialiste"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activite_detail_tv_motif"
            app:layout_constraintBottom_toTopOf="@+id/activite_detail_btn_retour"
            app:layout_constraintHorizontal_bias="0.312" app:layout_constraintVertical_bias="0.325"/>
    <Button
            android:text="Supprimer cette invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activite_detail_btn_supprimer"
            app:layout_constraintStart_toEndOf="@+id/activite_detail_btn_retour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/activite_detail_btn_retour"
            app:layout_constraintTop_toTopOf="@+id/activite_detail_btn_retour"/>
</androidx.constraintlayout.widget.ConstraintLayout>